MODULE_NAME="Header"

KEYWORDS="ALL"
LEVEL="BASIC"


# Check the doc to find if lang attribute is set on guide label
exec_module() {
	# Look for Header label
	TMP_HEADER=$(grep '<!-- $Header:' ${DOC})

	if [[ -z ${TMP_HEADER} ]]; then
		OUTPUT_RESULT="warning"
		OUTPUT_TEXT="You should add \"<!-- \$Header: -->\" a line after xml version tag."
	else
		OUTPUT_RESULT="ok"
	fi
}
